<h1 align="center">Login</h1>

  <%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>
    <div class='form-group'>
      <div class='control-label'>
      <%= f.label :email %>
      </div>
      <div class='col-sm-12'>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
      </div>
    </div>
    <div class='form-group'>
      <div class='control-label'>
      <%= f.label :password %>
      </div>
      <div class='col-sm-12'>
      <%= f.password_field :email, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
    <div class='form-group' align="center">
      <div class='butN mx-auto' style="width: 100px">
      <%= f.submit "Log in", class: 'btn btn-primary btn-lg', id:'search' %>
      </div>
      <div class='butN mx-auto' style="width: 500px">
      <%= link_to 'Cancel request and return to articles listing', articles_path, class: 'btn btn-primary btn-lg', id: 'search' %>
      </div>
    </div>
  <% end %>

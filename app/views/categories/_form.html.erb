    <%= form_for(@category, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <div class='control-label'>
        <%= f.label :name %>
        </div>
        <div class='col-sm-12'>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name of category', autofocus: true %>
        </div>
      </div>
      <div class='form-group' align="center">
        <div class='butN mx-auto' style="width: 100px">
        <%= f.submit "Create", class: 'btn btn-primary btn-lg', id:'search' %>
        </div>
        <div class='butN mx-auto' style="width: 500px">
        <%= link_to 'Cancel request and return to articles listing', articles_path, class: 'btn btn-primary btn-lg', id: 'search' %>
        </div>
      </div>
      <% end %>

<%= render 'shared/errors', obj: @user %>

  <div class='col-sm-12'>
    <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <div class='control-label'>
        <%= f.label :username %>
        </div>
        <div class='col-sm-12'>
        <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label'>
        <%= f.label :email %>
        </div>
        <div class='col-sm-12'>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter e-mail' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label'>
        <%= f.label :password %>
        </div>
        <div class='col-sm-12'>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
        </div>
      </div>
      <div class='form-group' align="center">
        <div class='butN mx-auto' style="width: 100px">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update", class: 'btn btn-primary btn-lg', id:'search') %>
        </div>
        <div class='butN mx-auto' style="width: 500px">
        <%= link_to 'Cancel request and return to articles listing', articles_path, class: 'btn btn-primary btn-lg', id: 'search' %>
        </div>
      </div>
    <% end %>
  </div>

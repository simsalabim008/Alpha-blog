<%= render 'shared/errors', obj: @article %>

<form>s
  <div class='col-sm-12'>
    <%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <div class='control-label'>
        <%= f.label :title %>
        </div>
        <div class='col-sm-12'>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label'>
        <%= f.label :description %>
        </div>
        <div class='col-sm-12'>
        <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Body of article' %>
        </div>
      </div>
      <div class='form-group' align="center">
        <div class='butN mx-auto' style="width: 100px">
        <%= f.submit 'Submit', class: 'btn btn-primary btn-lg', id:'search' %>
        </div>
        <div class='butN mx-auto' style="width: 500px">
        <%= link_to 'Cancel request and return to articles listing', articles_path, class: 'btn btn-primary btn-lg', id: 'search' %>
        </div>
      </div>
    <% end %>
  </div>
</form>
